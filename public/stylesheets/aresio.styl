/* ----------------- DEBUT HTML -------------------- */
body, nav
    margin:0
    padding:0

body 
    text-rendering:optimizeLegibility
    font-family:Arial, sans-serif
    font-size:13px
    line-height:22px
    color:#333
    background:#FFF    
    
h1, h2 
    width:100%
    text-align:center
    font-style:italic
    padding:5px

nav
    margin:auto
    
nav ul
    background:url(../images/bg/bg-menu.png)
    padding:3px 2px 4px 2px
    margin:0
    width:366px
    height:34px
    margin:auto
    
nav li
    background:url(../images/bg/bg-elt-menu.png)
    display:block
    float:left
    width:89px
    height:34px
    margin:0 1 0 0
    text-align:center
    font-weight:bold
    

/* ----------------- FIN HTML -------------------- */


/* ----------------- DEBUT CUSTOM ---------------- */
div.hr320 
    width:320px
    height:3px
    margin:auto
    padding:0
    background:url(../images/bg/separateur320.png)

div.hr320 hr 
    display:none

/* ----------------- DEBUT CUSTOM ---------------- */


