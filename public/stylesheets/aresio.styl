/* ----------------- DEBUT HTML -------------------- */
body, nav
    margin:0
    padding:0

body 
    text-rendering:optimizeLegibility
    font-family:Arial, sans-serif
    font-size:13px
    line-height:22px
    color:#333
    background:#FFF    
    
h1
    width:100%
    text-align:center
    font-style:italic
    padding:5px
    margin:0
    font-size:1.5em

nav
    margin:auto
    
nav ul
    background:url(../images/bg/bg-menu.png)
    padding:2px
    margin:0
    width:362px
    height:37px
    margin:auto
    
nav li
    background:url(../images/bg/bg-elt-menu.png)
    display:block
    float:left
    width:90px
    height:37px
    margin:0
    text-align:center
    font-weight:bold

nav li:first-child
    background:url(../images/bg/bg-menu-gauche.png)
    width:91px

nav li:last-child
    background:url(../images/bg/bg-menu-droite.png)
    width:91px
    

/* ----------------- FIN HTML -------------------- */


/* ----------------- DEBUT CUSTOM ---------------- */
div.hr320 
    width:320px
    height:3px
    margin:5px auto
    padding:0
    background:url(../images/bg/separateur320.png)    

div.hr320 hr 
    display:none

span.sousTitre
    display:block
    margin:auto
    font-size:1.2em
/* ----------------- DEBUT CUSTOM ---------------- */


