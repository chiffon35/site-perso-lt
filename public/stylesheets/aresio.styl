/* ----------------- DEBUT HTML -------------------- */
body, nav
    margin:0
    padding:0

body 
    text-rendering:optimizeLegibility
    font-family:Arial, sans-serif
    font-size:13px
    color:#000
    background:#FFF    
    
h1
    text-align:left
    font-style:italic
    padding:5px 0
    margin:0
    font-size:1.5em
/* ----------------- FIN HTML -------------------- */


/* ----------------- DEBUT CUSTOM ---------------- */
.clear
    width:1px
    height:100%
    line-height:1px
    float:none
    clear:both
.hr320 
    width:320px
    height:3px
    margin:10px auto
    padding:0
    background:url(../images/bg/separateur320.png)    

.hr320 hr 
    display:none

.titre 
    float:left
    
.soustitre
    display:block
    font-size:1.3em

nav.menu
    margin:auto
    
nav.menu ul
    background:url(../images/bg/bg-menu.png)
    padding:2px
    margin:0
    width:362px
    height:37px
    margin:auto
    list-style-type:none
    list-style-image:none
    
nav.menu ul li
    background:url(../images/bg/bg-elt-menu.png)
    display:block
    float:left
    width:90px
    height:28px
    padding:9px 0 0 0
    margin:0
    text-align:center
    font-weight:bold
    color:#555

nav.menu ul li:first-child
    background:url(../images/bg/bg-elt-menu-gauche.png)
    width:91px

nav.menu ul li:last-child
    background:url(../images/bg/bg-elt-menu-droite.png)
    width:91px

nav.menu ul li.elt-menu-pressed
    background:url(../images/bg/bg-elt-menu-pressed.png)

nav.menu ul li:not(.elt-menu-pressed):hover
    background:url(../images/bg/bg-elt-menu-hover.png)
    cursor:pointer

span.langues-disponibles
    display:block;
    float:left;
    margin:0 10px 0 0 
    padding:4px 0 0 0

nav.langues ul
    float:right;
    list-style-type:none
    list-style-image:none
    padding:0
    margin:0

nav.langues ul li
    list-style-type:none
    list-style-image:none
    display:block
    float:left
    padding:0
    margin:0 10px 0 0 
    
nav.langues ul li a
    display:block
    padding:0
    margin:0
    text-decoration:none
    border:none
    height:24px
    width:24px
    padding-bottom:13px
    background:url(../images/bg/bg-radio.png) bottom center no-repeat

nav.langues ul li span.selected
    display:block
    padding:0
    margin:0
    text-decoration:none
    border:none
    height:24px
    width:24px
    padding-bottom:13px
    background:url(../images/bg/bg-radio-selected.png) bottom center no-repeat

.invisible
    display:none
/* ----------------- DEBUT CUSTOM ---------------- */


/* ----------------- DEBUT BLOCS -------------------- */
div#page 
    width:946px
    margin:0 auto
    padding:5px 17px 10px 17px
    background:url(../images/bg/bg-page.jpg) center top 
/* ----------------- FIN BLOCS -------------------- */


